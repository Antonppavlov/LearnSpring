<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="robot_config.xml"/>

    <bean name="t1000Pool" class="javalearn.impl.poll.RobotPollCollection">
        <property name="robotCollection">
            <list>
                <ref bean="t1000LG"/>
                <ref bean="t1000Sony"/>
                <bean
                        class="javalearn.impl.robot.ModelT1000">
                    <constructor-arg ref="lgHand" index="0"/>
                    <constructor-arg ref="sonyHead" index="1"/>
                    <constructor-arg ref="lgLeg" index="2"/>
                    <property name="color" value="black"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean name="t1000GoldenPool" class="javalearn.impl.poll.RobotPollCollection">
        <constructor-arg name="robotCollection"
                         value="#{t1000Pool.robotCollection.?[color.toUpperCase() eq 'GOLD']}">
        </constructor-arg>
    </bean>


    <bean name="t1000Pool2" class="javalearn.impl.poll.RobotPollMap">
        <constructor-arg>
            <map>
                <entry key="2000" value-ref="t1000Sony"/>
                <entry key="2001" value-ref="t1000LG"/>
                <entry key="2003">
                    <bean
                            class="javalearn.impl.robot.ModelT1000">
                        <constructor-arg ref="lgHand" index="0"/>
                        <constructor-arg ref="sonyHead" index="1"/>
                        <constructor-arg ref="lgLeg" index="2"/>
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean name="t1000PoolAutowire" class="javalearn.impl.poll.RobotPollCollection" autowire="constructor"/>

</beans>